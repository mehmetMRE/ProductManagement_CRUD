@model IEnumerable<ProductManagement.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Ürün Listesi</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Yeni Ürün Ekle</a>
    </p>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok Miktarı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.StockQuantity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>